<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    android:orientation="vertical"
    android:background="#ffe9e9e9"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/header"
        android:background="#ffffffff"
        android:layout_width="fill_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true"
        android:elevation="5.0dip"
        >
        <ImageView
            android:layout_gravity="left"
            android:id="@+id/btn_back"
            android:padding="18.0dip"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:src="@drawable/icon_arrow_back"
            android:scaleType="centerInside"
            android:elevation="5.0dip"
            />
        <TextView
            android:textSize="20.0dip"
            android:textColor="#ff000000"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_password"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-medium"
            />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_card_white"
        android:paddingTop="25.0dip"
        android:paddingBottom="15.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20.0dip"
        android:paddingStart="12.0dip"
        android:paddingEnd="12.0dip"
        android:elevation="5.0dip"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true"
            >
            <androidx.appcompat.widget.AppCompatEditText
                android:textSize="14.0dip"
                android:textColor="#d0000000"
                android:gravity="left"
                android:id="@+id/text_password_current"
                android:background="@drawable/bg_edit_text_white"
                android:paddingTop="15.0dip"
                android:paddingBottom="15.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_your_current_password"
                android:inputType="textPassword"
                android:textAlignment="5"
                android:paddingStart="10.0dip"
                android:paddingEnd="10.0dip"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true"
            >
            <androidx.appcompat.widget.AppCompatEditText
                android:textSize="14.0dip"
                android:textColor="#d0000000"
                android:gravity="left"
                android:id="@+id/text_password_new"
                android:background="@drawable/bg_edit_text_white"
                android:paddingTop="15.0dip"
                android:paddingBottom="15.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_your_new_password"
                android:inputType="textPassword"
                android:textAlignment="5"
                android:paddingStart="10.0dip"
                android:paddingEnd="10.0dip"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:textSize="11.0dip"
            android:textColor="#ff888888"
            android:gravity="left"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dip"
            android:text="@string/password_must_be_minimum_8_characters"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:layout_marginBottom="20.0dip"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true"
            >
            <androidx.appcompat.widget.AppCompatEditText
                android:textSize="14.0dip"
                android:textColor="#d0000000"
                android:gravity="left"
                android:id="@+id/text_confirm_new"
                android:background="@drawable/bg_edit_text_white"
                android:paddingTop="15.0dip"
                android:paddingBottom="15.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/re_enter_your_password"
                android:inputType="textPassword"
                android:textAlignment="5"
                android:paddingStart="10.0dip"
                android:paddingEnd="10.0dip"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:textSize="15.0dip"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@+id/btn_update"
            android:background="@drawable/bg_btn_blue"
            android:paddingTop="15.0dip"
            android:paddingBottom="15.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="0.0dip"
            android:text="@string/update_password"
            android:textAllCaps="false"
            android:paddingStart="10.0dip"
            android:paddingEnd="10.0dip"
            />
    </LinearLayout>
</LinearLayout>
