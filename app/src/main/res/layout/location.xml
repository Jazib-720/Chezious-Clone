<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
    android:orientation="vertical"
    android:background="#ffffcb08"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <ImageView
        android:id="@+id/btn_cancel"
        android:padding="10.0dip"
        android:layout_width="50.0dip"
        android:layout_height="50.0dip"
        android:src="@drawable/icon_cross"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:tint="#ffcc001e"
        />
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/layout_language"
        android:padding="5.0dip"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/separator"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10.0dip"
        android:layout_alignParentEnd="true"
        >
        <ImageView
            android:id="@+id/image_language"
            android:layout_width="23.0dip"
            android:layout_height="23.0dip"
            android:src="@drawable/icon_language_drawer"
            android:layout_marginEnd="7.0dip"
            app:tint="#ff555555"
            />
        <TextView
            android:textSize="14.0dip"
            android:textColor="#ff555555"
            android:id="@+id/text_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            />
    </LinearLayout>
    <View
        android:id="@+id/separator"
        android:background="#ffe9e9e9"
        android:layout_width="fill_parent"
        android:layout_height="0.100000024dip"
        android:layout_below="@+id/btn_cancel"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="10.0"
        android:layout_below="@+id/separator"
        >
        <ImageView
            android:id="@+id/logo_restaurant"
            android:padding="20.0dip"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:src="@drawable/logo_restaurant"
            android:layout_weight="3.0"
            android:layout_centerHorizontal="true"
            />
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layout_order_mode"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_marginBottom="20.0dip"
            android:layout_weight="1.5"
            >
            <TextView
                android:textSize="20.0dip"
                android:textStyle="bold"
                android:textColor="#ff000000"
                android:layout_gravity="center_horizontal"
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:text="@string/select_order_mode"
                android:layout_centerHorizontal="true"
                />
<!--            <com.google.android.material.tabs.TabLayout-->
<!--                android:id="@+id/tab_order_mode"-->
<!--                android:layout_width="fill_parent"-->
<!--                android:layout_height="50.0dip"-->
<!--                android:textAlignment="4"-->
<!--                app:tabIndicatorColor="#ffe9e9e9"-->
<!--                app:tabIndicatorHeight="50.0dip"-->
<!--                app:tabSelectedTextColor="#ff000000"-->
<!--                app:tabTextAppearance="@style/tabTextAppearance"-->
<!--                app:tabTextColor="#ff000000"-->
<!--                />-->
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="5.5"
            >
            <TextView
                android:textSize="14.0dip"
                android:textColor="#ff000010"
                android:layout_gravity="center_horizontal"
                android:id="@+id/text_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4.0dip"
                android:text="@string/find_outlet_description"
                />
            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:id="@+id/spinner_city"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.0dip"
                android:paddingStart="10.0dip"
                android:layout_marginStart="45.0dip"
                android:layout_marginEnd="45.0dip"
                app:smsp_baseColor="#00000000"
                app:smsp_floatingLabelColor="@color/colorPrimary"
                app:smsp_hint="@string/select_your_city"
                app:smsp_hintColor="#ff808080"
                app:smsp_isSearchable="true"
                app:smsp_itemColor="#ff000000"
                app:smsp_itemListColor="#ff000000"
                app:smsp_itemListHintBackgroundColor="#ff808080"
                app:smsp_itemListHintColor="#ffffffff"
                app:smsp_searchHeaderBackgroundColor="@color/colorPrimary"
                app:smsp_searchHeaderText="@string/select_search_city"
                app:smsp_searchHeaderTextColor="#ffffffff"
                app:smsp_searchHint="@string/select_your_city"
                app:smsp_searchHintColor="#ff808080"
                app:smsp_searchTextColor="#ff000000"
                app:smsp_selectedItemListColor="@color/colorPrimary"
                />
            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:id="@+id/spinner_area"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:translationY="10.0dip"
                android:paddingStart="10.0dip"
                android:layout_marginStart="45.0dip"
                android:layout_marginEnd="45.0dip"
                app:smsp_baseColor="#00000000"
                app:smsp_floatingLabelColor="@color/colorPrimary"
                app:smsp_hint="@string/select_your_area"
                app:smsp_hintColor="#ff808080"
                app:smsp_isSearchable="true"
                app:smsp_itemColor="#ff000000"
                app:smsp_itemListColor="#ff000000"
                app:smsp_itemListHintBackgroundColor="#ff808080"
                app:smsp_itemListHintColor="#ffffffff"
                app:smsp_searchHeaderBackgroundColor="@color/colorPrimary"
                app:smsp_searchHeaderText="@string/select_search_area"
                app:smsp_searchHeaderTextColor="#ffffffff"
                app:smsp_searchHint="@string/select_your_area"
                app:smsp_searchHintColor="#ff808080"
                app:smsp_searchTextColor="#ff000000"
                app:smsp_selectedItemListColor="@color/colorPrimary"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:textColor="@color/colorButtonSecondaryText"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn_select"
                android:background="@drawable/bg_btn_green"
                android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40.0dip"
                android:minWidth="0.0dip"
                android:minHeight="0.0dip"
                android:text="@string/confirm"
                android:textAllCaps="false"
                android:paddingStart="30.0dip"
                android:paddingEnd="30.0dip"
                android:layout_marginStart="45.0dip"
                android:layout_marginEnd="45.0dip"
                android:elevation="3.0dip"
                />
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:id="@+id/btn_map"
                android:background="@drawable/bg_btn_border_secondary"
                android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:paddingStart="30.0dip"
                android:paddingEnd="30.0dip"
                android:layout_marginStart="45.0dip"
                android:layout_marginEnd="45.0dip"
                >
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:src="@drawable/icon_marker"
                    android:layout_marginEnd="4.0dip"
                    app:tint="@color/colorButtonSecondary"
                    />
                <TextView
                    android:textSize="14.0dip"
                    android:textColor="@color/colorButtonSecondary"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/locate_on_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/locate_on_map"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
