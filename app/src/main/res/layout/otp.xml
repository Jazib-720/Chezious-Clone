<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:elevation="10dp">

    <!-- Title of the Dialog -->
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify your phone number"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="8dp"/>

    <!-- Message Body -->
    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We just sent you a code via sms on 923351590891. Enter it to verify your phone. Please note that SMS delivery can take a minute or more."
        android:textSize="14sp"
        android:textColor="#444444"
        android:layout_marginBottom="16dp"/>

    <!-- OTP Input Field -->
    <EditText
        android:id="@+id/otp_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter code"
        android:inputType="number"
        android:textSize="16sp"
        android:padding="10dp"

        android:layout_marginBottom="16dp"/>

    <!-- Buttons (Submit, Resend SMS, Call Me, Send Email, Cancel) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Submit Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textSize="16sp"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"/>

        <!-- Resend SMS Button -->
        <Button
            android:id="@+id/resend_sms_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resend Sms (40)"
            android:textSize="14sp"
            android:background="@android:color/transparent"
            android:textColor="#00796B"
            android:layout_marginBottom="8dp"/>

        <!-- Call Me Button -->
        <Button
            android:id="@+id/call_me_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call Me"
            android:textSize="14sp"
            android:background="@android:color/transparent"
            android:textColor="#00796B"
            android:layout_marginBottom="8dp"/>

        <!-- Send on Registered Email Button -->
        <Button
            android:id="@+id/send_email_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send on Registered Email"
            android:textSize="14sp"
            android:background="@android:color/transparent"
            android:textColor="#00796B"
            android:layout_marginBottom="8dp"/>

        <!-- Cancel Button -->
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="14sp"
            android:background="@android:color/transparent"
            android:textColor="#D32F2F"/>

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
