<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    android:orientation="vertical"
    android:background="#ffe9e9e9"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:id="@+id/parent_layout"
        android:background="@drawable/bg_card_white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4.0dip"
        android:layout_marginBottom="8.0dip"
        android:layout_marginStart="12.0dip"
        android:layout_marginEnd="12.0dip"
        android:elevation="5.0dip"
        >
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/layout_offer"
            android:background="@drawable/icon_banner"
            android:paddingTop="3.0dip"
            android:paddingBottom="5.0dip"
            android:visibility="gone"
            android:layout_width="90.0dip"
            android:layout_height="25.0dip"
            android:layout_marginTop="20.0dip"
            android:paddingStart="6.0dip"
            android:paddingEnd="15.0dip"
            android:layout_marginStart="-3.0dip"
            android:layout_alignParentStart="true"
            android:elevation="5.0dip"
            >
            <TextView
                android:textSize="11.0sp"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:id="@+id/text_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50% OFF"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/linear_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="150.0dip"
            android:layout_weight="3.0"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_dish"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:src="@drawable/placeholder_dish"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_weight="1.0"
                />
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="2.0"
                >
                <TextView
                    android:textSize="16.0dip"
                    android:textColor="#ff000000"
                    android:ellipsize="end"
                    android:id="@+id/text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:text="niga"
                    android:maxLines="2"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10.0dip"
                    android:layout_marginEnd="10.0dip"
                    android:layout_alignParentStart="true"
                    />
                <TextView
                    android:textSize="12.0dip"
                    android:ellipsize="end"
                    android:id="@+id/text_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:text="niga"
                    android:minLines="2"
                    android:layout_below="@+id/text_name"
                    android:layout_marginStart="10.0dip"
                    android:layout_marginEnd="10.0dip"
                    android:layout_alignParentStart="true"
                    />
                <TextView
                    android:textSize="12.0sp"
                    android:textColor="#ffedad1d"
                    android:gravity="center_vertical"
                    android:id="@+id/text_customization"
                    android:paddingBottom="8.0dip"
                    android:visibility="invisible"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/customization_available"
                    android:layout_below="@+id/text_desc"
                    android:fontFamily="sans-serif-medium"
                    android:paddingStart="10.0dip"
                    android:paddingEnd="10.0dip"
                    android:layout_alignParentStart="true"
                    />
                <LinearLayout
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:id="@+id/layout_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_customization"
                    android:layout_alignParentStart="true"
                    >
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_rounded_light_green"
                        android:paddingTop="4.0dip"
                        android:paddingBottom="4.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:paddingStart="4.0dip"
                        android:paddingEnd="10.0dip"
                        android:layout_marginStart="10.0dip"
                        >
                        <TextView
                            android:textSize="12.0dip"
                            android:textColor="@color/colorHighlightBackgroundText"
                            android:ellipsize="end"
                            android:id="@+id/item_discount_txt"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="250.0"
                            android:maxLines="1"
                            android:layout_marginStart="6.0dip"
                            />
                        <TextView
                            android:textSize="12.0dip"
                            android:textColor="@color/colorHighlightBackgroundText"
                            android:ellipsize="end"
                            android:id="@+id/item_price_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rs. 250.0"
                            android:maxLines="1"
                            android:layout_marginStart="6.0dip"
                            />
                    </LinearLayout>
                </LinearLayout>
<!--                <com.techworks.blinklibrary.customs.ValueSelector-->
<!--                    android:id="@+id/selector"-->
<!--                    android:layout_width="@dimen/value_selector_width"-->
<!--                    android:layout_height="27.0dip"-->
<!--                    android:layout_marginTop="10.0dip"-->
<!--                    android:layout_marginBottom="10.0dip"-->
<!--                    android:layout_below="@+id/layout_price"-->
<!--                    android:layout_marginStart="10.0dip"-->
<!--                    android:layout_marginEnd="10.0dip"-->
<!--                    android:layout_alignParentStart="true"-->
<!--                    />-->
                <ImageView
                    android:id="@+id/image_cart"
                    android:padding="8.0dip"
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    android:src="@drawable/icon_cart"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:layout_below="@+id/layout_price"
                    android:layout_marginStart="10.0dip"
                    android:layout_marginEnd="10.0dip"
                    android:layout_alignParentStart="true"
                    app:tint="#ffcc001e"
                    />
                <ImageView
                    android:id="@+id/image_favourite"
                    android:padding="8.0dip"
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    android:layout_marginBottom="-8.0dip"
                    android:src="@drawable/icon_favorite"
                    android:scaleType="centerInside"
                    android:layout_alignBottom="@+id/image_cart"
                    android:layout_marginEnd="10.0dip"
                    android:layout_alignParentEnd="true"
                    app:tint="#ffcc001e"
                    />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
