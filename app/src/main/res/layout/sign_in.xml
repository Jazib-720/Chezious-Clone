<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="#ffe9e9e9"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:textSize="20.0dip"
        android:textColor="#ff000000"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:layout_marginBottom="10.0dip"
        android:text="login" />

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_card_white"
        android:paddingTop="25.0dip"
        android:paddingBottom="15.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20.0dip"
        android:paddingStart="12.0dip"
        android:paddingEnd="12.0dip"
        android:elevation="5.0dip">

        <androidx.appcompat.widget.AppCompatButton
            android:textSize="15.0dip"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@+id/btn_phone_login"
            android:background="@drawable/bg_btn_blue"
            android:paddingTop="15.0dip"
            android:paddingBottom="15.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="0.0dip"
            android:text="Sign in with Phone Number"
            android:textAllCaps="false"
            android:paddingStart="10.0dip"
            android:paddingEnd="10.0dip" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:layout_marginBottom="20.0dip">

            <View
                android:background="#ffaaaaaa"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_toLeftOf="@id/text_or"
                android:layout_centerVertical="true" />

            <TextView
                android:textColor="#ffaaaaaa"
                android:id="@id/text_or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:text="@string/or_caps"
                android:layout_centerInParent="true" />

            <View
                android:background="#ffaaaaaa"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_toRightOf="@+id/text_or"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <EditText
            android:textSize="14.0dip"
            android:textColor="#d0000000"
            android:gravity="left"
            android:id="@+id/text_email"
            android:background="@drawable/bg_edit_text_white"
            android:paddingTop="15.0dip"
            android:paddingBottom="15.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="string/enter_your_email"
            android:inputType="textEmailAddress"
            android:imeOptions=""
            android:textAlignment="5"
            android:paddingStart="10.0dip"
            android:paddingEnd="10.0dip" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:layout_marginBottom="20.0dip"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true">

            <androidx.appcompat.widget.AppCompatEditText
                android:textSize="14.0dip"
                android:textColor="#d0000000"
                android:gravity="left"
                android:id="@+id/text_password"
                android:background="@drawable/bg_edit_text_white"
                android:paddingTop="15.0dip"
                android:paddingBottom="15.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="enter_your_password"
                android:inputType="textPassword"
                android:textAlignment="5"
                android:paddingStart="10.0dip"
                android:paddingEnd="10.0dip" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:textSize="15.0dip"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@+id/btn_login"
            android:background="@drawable/bg_btn_blue"
            android:paddingTop="15.0dip"
            android:paddingBottom="15.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="0.0dip"
            android:text="login"
            android:textAllCaps="false"
            android:paddingStart="10.0dip"
            android:paddingEnd="10.0dip" />

        <TextView
            android:textSize="13.0dip"
            android:textColor="#ff555555"
            android:layout_gravity="center_horizontal"
            android:id="@+id/text_forgot"
            android:padding="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:layout_marginBottom="5.0dip"
            android:text="forgot_password" />
    </LinearLayout>
</LinearLayout>
