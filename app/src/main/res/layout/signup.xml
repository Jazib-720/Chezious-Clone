<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
    android:orientation="vertical"
    android:background="#ffe9e9e9"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:textSize="20.0dip"
                android:textColor="#ff000000"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:layout_marginBottom="10.0dip"
                android:text="@string/sign_up"
                />
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bg_card_white"
                android:paddingTop="25.0dip"
                android:paddingBottom="30.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20.0dip"
                android:paddingStart="12.0dip"
                android:paddingEnd="12.0dip"
                android:elevation="5.0dip"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_pic"
                    android:clickable="false"
                    android:layout_width="100.0dip"
                    android:layout_height="100.0dip"
                    android:src="@drawable/place_holder_person"
                    android:elevation="5.0dip"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    />
                <TextView
                    android:textSize="12.0dip"
                    android:textColor="#ff666666"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip"
                    android:text="@string/upload_your_picture"
                    />
                <EditText
                    android:textSize="14.0dip"
                    android:textColor="#ff888888"
                    android:gravity="left"
                    android:id="@+id/editText_name"
                    android:background="@drawable/bg_edit_text_white"
                    android:paddingTop="15.0dip"
                    android:paddingBottom="15.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40.0dip"
                    android:hint="@string/enter_your_name"
                    android:maxLength="25"
                    android:inputType="textCapWords"
                    android:textAlignment="5"
                    android:paddingStart="10.0dip"
                    android:paddingEnd="10.0dip"
                    />
                <TextView
                    android:textSize="11.0dip"
                    android:textColor="#ff888888"
                    android:gravity="left"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2.0dip"
                    android:text="@string/name_cannot_be_longer_than_25_letters"
                    />
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_edit_text_white"
                    android:paddingTop="7.0dip"
                    android:paddingBottom="7.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:paddingStart="3.0dip"
                    android:paddingEnd="3.0dip"
                    >
                    <com.hbb20.CountryCodePicker
                        android:textSize="14.0dip"
                        android:id="@+id/countryCodeHolder"
                        android:background="@null"
                        android:paddingTop="-3.0dip"
                        android:paddingBottom="-3.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:ccp_autoDetectCountry="true"
                        app:ccp_autoFormatNumber="true"
                        app:ccp_defaultNameCode="pk"
                        app:ccp_hintExampleNumber="true"
                        app:ccp_showNameCode="false"
                        app:ccp_textSize="14.0dip"
                        />
                    <EditText
                        android:textSize="14.0dip"
                        android:gravity="left|center"
                        android:id="@+id/text_contact"
                        android:background="@null"
                        android:padding="5.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/phone"
                        android:singleLine="true"
                        android:editable="false"
                        android:inputType="phone"
                        android:imeOptions=""
                        android:textAlignment="5"
                        />
                </LinearLayout>
                <EditText
                    android:textSize="14.0dip"
                    android:textColor="#d0000000"
                    android:gravity="left"
                    android:id="@+id/text_email"
                    android:background="@drawable/bg_edit_text_white"
                    android:paddingTop="15.0dip"
                    android:paddingBottom="15.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:hint="@string/enter_your_email"
                    android:inputType="textEmailAddress"
                    android:imeOptions=""
                    android:textAlignment="5"
                    android:paddingStart="10.0dip"
                    android:paddingEnd="10.0dip"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/layout_info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    >
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0dip"
                        app:hintEnabled="false"
                        app:passwordToggleEnabled="true"
                        >
                        <androidx.appcompat.widget.AppCompatEditText
                            android:textSize="14.0dip"
                            android:textColor="#d0000000"
                            android:gravity="left"
                            android:id="@+id/text_password"
                            android:background="@drawable/bg_edit_text_white"
                            android:paddingTop="15.0dip"
                            android:paddingBottom="15.0dip"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/enter_password"
                            android:inputType="textPassword"
                            android:textAlignment="5"
                            android:paddingStart="10.0dip"
                            android:paddingEnd="10.0dip"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:textSize="11.0dip"
                        android:textColor="#ff888888"
                        android:gravity="left"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2.0dip"
                        android:text="@string/password_must_be_minimum_8_characters"
                        />
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0dip"
                        android:layout_marginBottom="10.0dip"
                        app:hintEnabled="false"
                        app:passwordToggleEnabled="true"
                        >
                        <androidx.appcompat.widget.AppCompatEditText
                            android:textSize="14.0dip"
                            android:textColor="#d0000000"
                            android:gravity="left"
                            android:id="@+id/text_password_confirm"
                            android:background="@drawable/bg_edit_text_white"
                            android:paddingTop="15.0dip"
                            android:paddingBottom="15.0dip"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/re_enter_password"
                            android:inputType="textPassword"
                            android:textAlignment="5"
                            android:paddingStart="10.0dip"
                            android:paddingEnd="10.0dip"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:textSize="15.0dip"
                    android:textColor="#ffffffff"
                    android:gravity="center"
                    android:id="@+id/btn_sign_up"
                    android:background="@drawable/bg_btn_blue"
                    android:paddingTop="15.0dip"
                    android:paddingBottom="15.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:minHeight="0.0dip"
                    android:text="@string/register"
                    android:textAllCaps="false"
                    android:paddingStart="10.0dip"
                    android:paddingEnd="10.0dip"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
